{% extends 'base.html.twig' %}

{% block title %}{{parent()}}-Liste des Supports{% endblock %}

{% block body %}
    <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold" style="font-family:Helvetica, sans-serif; text-align:center;">Liste des compatibilités</h1>
    <div class="text-center">
        <div class="btn btn-lg btn-success mt-2">
            <a href="{{path('app_addSupporter')}}"><button  type="submit" class="btn" style="font-family:Helvetica, sans-serif; text-align:center;">Ajouter un compatibilité</button></a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="fw-bold text-primary">
                            <th scope="col" style="font-family:Helvetica, sans-serif; text-align:center;">Produit</th>
                            <th scope="col" style="font-family:Helvetica, sans-serif; text-align:center;">Support</th>
                            <th scope="col" style="font-family:Helvetica, sans-serif; text-align:center;">Prix</th>
                            <th scope="col" style="font-family:Helvetica, sans-serif; text-align:center;">Stockage</th>
                         </tr>
                    </thead>
                    <tbody>
                        {% for Supporter in Supporters %}
                            <tr class="{{ cycle(['table-primary','table-secondary'], loop.index0) }}">
                                <td style="font-family:Helvetica, sans-serif; text-align:center;">{{ Supporter.produit.nom | capitalize }}</td>
                                <td style="font-family:Helvetica, sans-serif; text-align:center;">{{ Supporter.Support.nom | capitalize }}</td>
                                <td style="font-family:Helvetica, sans-serif; text-align:center;">{{ Supporter.prix }}</td>
                                <td style="font-family:Helvetica, sans-serif; text-align:center;">{{ Supporter.stock | capitalize }}</td>
                                <td style="font-family:Helvetica, sans-serif; text-align:center;"><a href="{{path("app_modifierSupporter",{'id':Supporter.id})}}"><i class="bi bi-pen-fill text-dark"></i></a></td>
                                <td style="font-family:Helvetica, sans-serif; text-align:center;"><a href="{{path("app_supprimerSupporter",{'id':Supporter.id})}}"><i class="bi bi-trash-fill text-dark"></i></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
