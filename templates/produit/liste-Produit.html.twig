{% extends 'base.html.twig' %}

{% block title %}{{parent()}}-Liste des Produits{% endblock %}

{% block body %}
    <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold" style="font-family: Brush Script MT; text-align:center;">Liste des Produits</h1>
    <div class="text-center">
        <div class="btn btn-lg btn-success mt-2">
            <a href="{{path('app_addProduit')}}"><button  type="submit" class="btn" >Ajouter un produit</button></a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="fw-bold text-primary">
                            <th scope="col" style="font-family:Helvetica, sans-serif; text-align:center;">Nom</th>
                            <th scope="col" style="font-family:Helvetica, sans-serif; text-align:center;">Description</th>
                            <th scope="col" style="font-family:Helvetica, sans-serif; text-align:center;">Type Produit</th>
                         </tr>
                    </thead>
                    <tbody>
                        {% for Produit in Produits |sort((a, b) => a.nom <=> b.nom) %}
                            <tr class="{{ cycle(['table-primary','table-secondary'], loop.index0) }}">
                                <td style="font-family:Helvetica, sans-serif; text-align:center;">{{ Produit.nom | capitalize }}</td>
                                <td style="font-family:Helvetica, sans-serif; text-align:center;">{{ Produit.description | capitalize }}</td>
                                <td style="font-family:Helvetica, sans-serif; text-align:center;">{{ Produit.TypeProduit.TypeProduit | capitalize }}</td>
                                <td style="font-family:Helvetica, sans-serif; text-align:center;"><a href="{{path("app_modifier_produit",{'id':Produit.id})}}"><i class="bi bi-pen-fill text-dark"></i></a></td>
                                <td style="font-family:Helvetica, sans-serif; text-align:center;"><a href="{{path("app_supprimer_produit",{'id':Produit.id})}}"><i class="bi bi-trash-fill text-dark"></i></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
